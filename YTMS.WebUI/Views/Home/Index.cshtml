
@{
    ViewBag.Title = "首页";

}
@section Style{
   
    @Html.RefCss("css/header.css")
    @Html.RefCss("css/index.css")
}
@section Body{
    <div id="app">
        @{Html.RenderPartial("Header"); }
        <div class="section">
            <div style="margin-bottom:20px;">
                <el-menu default-active="2" class="el-menu-demo" mode="horizontal">
                    <el-menu-item index="1">
                        <a href="#" class="sub" style="display:block;">系统设置</a>
                    </el-menu-item>
                    <el-menu-item index="2">
                        <a href="#" class="sub" style="display:block;">工作台</a>
                    </el-menu-item>
                </el-menu>
            </div>
            <div class="container">
                <div class="aside">
                    <el-menu class="el-menu-vertical-demo">
                        <el-menu-item index="1">
                            <a href="#" class="sub">
                                <i class="el-icon-menu"></i>
                                <span>预定</span>
                            </a>
                        </el-menu-item>

                        <el-menu-item index="4">
                            <a href="#" class="sub">
                                <i class="el-icon-edit-outline"></i>
                                <span>水电气录入</span>
                            </a>
                        </el-menu-item>
                        <el-menu-item index="5">
                            <a href="#" class="sub">
                                <i class="el-icon-tickets"></i>
                                <span>月结账</span>
                            </a>
                        </el-menu-item>
                    </el-menu>
                </div>
                <div class="panel home">
                    <div class="filter_box">
                        <div class="sear">
                            <el-input size="mini" placeholder="请输入内容"></el-input>
                            <el-button size="mini" type="primary">搜索</el-button>
                        </div>
                        <div class="f">
                            房态：<el-button class="" size="mini"></el-button>
                        </div>
                        <div class="f">
                            房型：<el-button class="" size="mini"></el-button>
                        </div>
                    </div>
                    <div class="room_box">
                        <div class="room">

                            <div>
                                <div class="room_no"></div>
                                <div class="n"></div>
                                <div class="state"><span></span></div>
                                <div class="operation">
                                    <a href="#">
                                        <span class="op">预定</span>
                                    </a>
                                    <a href="#">
                                        <span class="op">入住</span>
                                    </a>
                                    <a href="#">
                                        <span class="op">退房</span>
                                    </a>
                                    <a href="#"><span class="op dialog">日志</span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}
@section Script{
    <script>
        new Vue({
            el: '#app',
            data: function () {
                return { visible: false }
            }
        })
    </script>
}
